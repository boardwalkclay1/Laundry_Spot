<body>
  <h1>Order Tracking</h1>

  <div class="card" id="trackingBox">
    <p>Loading tracking...</p>
  </div>

  <a class="btn secondary" href="client-orders.html">Back to My Orders</a>

  <script type="module">
    import { supabase } from "./supabase.js";

    const params = new URLSearchParams(window.location.search);
    const orderId = params.get("id");

    const { data: { session } } = await supabase.auth.getSession();
    if (!session) window.location.href="login.html";

    const trackingSteps = [
      { key:"requested", label:"Order Requested" },
      { key:"assigned", label:"Washer Assigned" },
      { key:"pickup", label:"Laundry Picked Up" },
      { key:"washing", label:"Washing in Progress" },
      { key:"delivery", label:"Out for Delivery" },
      { key:"completed", label:"Completed" }
    ];

    const sampleOrder = {
      id: orderId,
      status: "washing",
      washer: "Sarah M.",
      loads: 2
    };

    const trackingBox = document.getElementById("trackingBox");
    trackingBox.innerHTML = "";

    trackingSteps.forEach(step => {
      const div = document.createElement("div");
      div.className = "step";
      if (step.key === sampleOrder.status) div.classList.add("active");
      div.textContent = step.label;
      trackingBox.appendChild(div);
    });
  </script>
</body>
